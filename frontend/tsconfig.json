{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* LINTING & INTEROPERABILITY */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true, // <-- THIS IS THE FIX: Allows importing .js and .jsx files
    "checkJs": false // <-- This is also helpful, it stops TypeScript from checking JS files for errors
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
